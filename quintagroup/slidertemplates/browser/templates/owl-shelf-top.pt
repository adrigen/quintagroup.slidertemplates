 <dl class="portlet portletCollection"
     i18n:domain="plone"
     tal:define="collection_url view/collection_url;
                 header view/data/header;
                 toLocalizedTime nocall:context/@@plone/toLocalizedTime;">
      <dt class="portletHeader">
        <a tal:attributes="href collection_url" tal:omit-tag="not:view/data/show_more">
            <span tal:content="header" />
        </a>
     </dt>    
        <div id="owl-shelf" tal:attributes="id header" class="owl-carousel owl-theme ">
          <div class="item" tal:repeat="item view/results">
              <dd class="portletItem"
                  tal:define="obj item/getObject;">
                  <a class="tile"
                     tal:attributes="href item/getURL" >
                   <h3 tal:replace="item/Title">Title</h3>
                   <span class="portletItemDetails"
                        tal:condition="view/data/show_dates"
                        tal:content="python:toLocalizedTime(item.Date)">
                      Date
                   </span>
                    <span class="eventItemData"
                        tal:condition="view/data/show_dates">
                    <span tal:content="python:toLocalizedTime(item.start, long_format=True)"> Start </span>
                    <span tal:content="python:toLocalizedTime(item.end, long_format=True)"> End </span>
                  </span>
                  <p tal:content="item/Description" />
                  <div tal:omit-tag="" tal:condition="obj/image|nothing">
                    <img tal:define="scales onj/@@images"
                         tal:replace="structure python: scales.tag('image')" />
                  </div>
                  </a>     
              </dd>
          </div>
        </div>

     <tal:x replace="structure string:&lt;script type='text/javascript'&gt;"></tal:x>
        $(document).ready(function() {

        $("#<tal:x replace="header"></tal:x>").owlCarousel({
            itemsDesktop : [1199,3],
            itemsCustom : false,
            items : 3,
            navigation : true, // Show next and prev buttons
          });
        });
        $("body").data("page", "frontpage");

      <tal:x replace="structure string: &lt;/script&gt;" ></tal:x>
 
 </dl>
<dl class="portlet portletCollection"
     i18n:domain="plone"
     tal:define="collection_url view/collection_url;
                 toLocalizedTime nocall:context/@@plone/toLocalizedTime;
                 header view/data/header;">
 
         
      <dt class="portletHeader">
          <a tal:attributes="href collection_url" tal:omit-tag="not:view/data/show_more">
              <span tal:content="header" />
          </a>
      </dt>
      <div id="owl-demo" tal:attributes="id header" class="owl-carousel owl-theme " >
        <div class="item" tal:repeat="obj view/results">
            <dd class="portletItem"
                tal:define="oddrow repeat/obj/odd;
                            item obj/getObject;
                            item_description item/Description;">
                <a  href="#"
                    class="tile"
                    tal:attributes="href obj/getURL" >
                <span class="portletItemDetails"
                      tal:condition="view/data/show_dates"
                      tal:content="python:toLocalizedTime(obj.Date)">
                    Date
                </span>
                <div tal:omit-tag="" tal:condition="item/image|nothing">
                  <img tal:define="scales item/@@images"
                       tal:replace="structure python: scales.tag('image')" />
                </div>
                <p class="documentDescription" tal:content="obj/Description" />
<!--                 <p tal:condition="exists:item/getText" tal:content="structure item/getText" /> -->
                </a>     
            </dd>
        </div>
      </div>
 
     <tal:x replace="structure string:&lt;script type='text/javascript'&gt;"></tal:x>
        $(document).ready(function() {

        $("#<tal:x replace="header"></tal:x>").owlCarousel({
            itemsDesktop : [1199,3],
            itemsCustom : false,
            items : 3,
            navigation : true,
          });

        });

        $("body").data("page", "frontpage");

      <tal:x replace="structure string: &lt;/script&gt;" ></tal:x>
 </dl>